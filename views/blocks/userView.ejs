<div class="container">
    <div class="row mb-4">
        <div class="col-md-4 mb-2">
            <img src="https://picsum.photos/400/400" class="mt-1 ml-1 img-fluid rounded" alt="">
        </div>
        <div class="col-md-8">
            <h1><%= user.UserFamily %> <%= user.UserName %> <%= user.UserLastName %> </h1> <% if(user.canEdit) {%> <span
                class="btnChangePassword text-info">Изменить пароль от аккаунта</span> <%}%>
            <div class="row mb-2">
                <div class="col-md-12 text-right">
                    <% if(user.TeamName) {%>
            <h3>Моя команда</h3>
            <h2 id="TeamName">
                <% if(user.isCoach) {%>
                <i class="fas fa-star text-warning"></i>
                <%} else {%>
                <i class="fas fa-user"></i>
                <%}%>
                <a
                href="/team/<%= user.TeamTag %>"><%= user.TeamName %></a> <i class="fas fa-users"></i>
                <%}%>
                <%= user.teamPlayersCount %></h2>
        </div>
    </div>
</div>
</div>
