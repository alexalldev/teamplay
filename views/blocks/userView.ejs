<div class="container">
    <div class="row mb-4">
        <div class="col-md-4 mb-2">
            <img src="https://i.picsum.photos/id/563/400/400.jpg" class="mt-1 ml-1 img-fluid rounded" alt="">
        </div>
        <div class="col-md-8">
            <h1><%= user.UserFamily %> <%= user.UserName %> <%= user.UserLastName %> </h1> <% if(user.canEdit) {%> <span
                class="btnChangePassword text-info">Изменить пароль от аккаунта</span> <%}%>
            <div class="row mb-2">
                <div class="col-md-12 text-right">
                    <% if(user.TeamName) {%>
            <h3>Моя команда</h3>
            <h2 id="TeamName">
                <% if(user.isCoach) {%>
                <i class="fas fa-star text-warning"></i>
                <%} else {%>
                <i class="fas fa-user"></i>
                <%}%>
                <a
                href="/team/<%= user.TeamTag %>"><%= user.TeamName %></a> <i class="fas fa-users"></i>
                <%}%>
                <%= user.teamPlayersCount %></h2>
        </div>
    </div>
</div>
</div>
<div class="row">

    <div class="col-md-12 text-center">
        <h2>Статистика игр</h2>
        <div style="width: 100%; height: 100%;">
            <canvas class="myChart"></canvas>
            <button class="btnUserResults btn btn-info" data-toggle="modal"
                data-target="#UserResultsModal">Подробнее</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="modal fade UserResultsModal" id="UserResultsModal">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Подробные результаты игр</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="container">
                                <div class="loading">
                                    <h5 class="modal-title">Загрузка...</h5>
                                </div>
                                <div id="GameResults"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>