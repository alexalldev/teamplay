<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>TeamPlay Home</title>
    <link rel="stylesheet" href="/public/css/home.css">
    <% include blocks/title %>
</head>

<body>
    <% include blocks/loader %>
    <% include blocks/header %>
    <section class="app-container">
        <div class="container">
            <div class="row">
                <%- include('blocks/navigation-area', {page:"teams"}) %>
                <div class="col-md-10 working-area mt-2">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-outline-success ml-2 mt-2 h1 btnCreateTeam">Создать свою команду</button>
                            <% if (teams.length > 0) { %>
                            <% teams.forEach(function(team){ %>
                            <% team.userTeamId = teams.userTeamId%>
                            <%- include('blocks/teamsListItem', {team: team}); %>
                            <% }); %>
                            <% } else { %>
                            <% include blocks/greetings %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <% include blocks/footer %>
</body>
<% include blocks/socket %>
<script src="/public/js/animateCSS.js"></script>
<script src="/public/js/listItemAction.js"></script>
<script src="/public/js/home.js"></script>
</html>