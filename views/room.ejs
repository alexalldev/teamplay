<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>TeamPlay Room</title>
    <link rel="stylesheet" href="/public/css/ControlPanel/style.css">
    <% include blocks/tittle %>
  </head>
  <body>
		<% include blocks/loader %>
		<% include blocks/header %>
  	<section>
			<div class="container">
				<div class="row mb-4">
					<div class="col-md-12 text-center">
						<h1 class="h1">Выберите игру</h1>
					</div>
				</div>
				<div class="row mb-4">
					<div class="col-md-12 text-center GamesList">
							<span class="h2 NullGames">Нет активных игр</span>
					</div>
				</div>
			</div>
			<div class="container mt-5">
					<div class="row mb-2">
						<div class="col-md-12 text-center">
							<span class="h1">
								<%= team.TeamName %>
							</span>
						</div>
					</div>
					<div class="row mb-2">
							<div class="col-md-12 text-center">
								<span class="h1">
									<%= team.GroupName %>
								</span>
							</div>
					</div>
					<div class="row">
							<div class="col-md-12 text-center">
								<span class="h2">Игровой состав</span>
								<table class="table table-hover">
									<thead>
										<th>Фамилия</th>
										<th>Имя</th>
										<th>Отчество</th>
									</thead>
									<tbody>
										<%for (var player in players) {%>
											<% if(players[player].Capitan == true){ %>
												<tr class="shadow sm" title="Капитан">
											<% } else{ %>  
												<tr title="Игрок">
										 <% } %>
													<td><%= players[player].PlayerFamily %></td>
													<td><%= players[player].PlayerName %></td>
													<td><%= players[player].PlayerLastName %></td>
											</tr>
										<%}%>
									</tbody>
								</table>
							</div>
					</div>
			</div>
  	</section>
  </body>
  <script src="/socket.io/socket.io.js"></script>
	<script src="/public/js/Room/index.js"></script>
</html>
